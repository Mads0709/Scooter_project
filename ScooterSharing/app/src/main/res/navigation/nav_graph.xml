<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="dk.itu.moapd.scootersharing.mgan.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_fragmentListScooters"
            app:destination="@id/fragmentListScooters" />
        <action
            android:id="@+id/action_mainFragment_to_fragmentMap"
            app:destination="@id/fragmentMap" />
        <action
            android:id="@+id/action_mainFragment_to_fragmentPicture"
            app:destination="@id/fragmentPicture" />
        <action
            android:id="@+id/action_mainFragment_to_fragmentQR"
            app:destination="@id/fragmentQR" />
        <action
            android:id="@+id/action_mainFragment_to_fragmentScooterInfo"
            app:destination="@id/fragmentScooterInfo" />
    </fragment>

    <fragment
        android:id="@+id/fragmentListScooters"
        android:name="dk.itu.moapd.scootersharing.mgan.fragments.ListScootersFragment"
        android:label="ListScootersFragment"
    />
    <fragment
        android:id="@+id/fragmentMap"
        android:name="dk.itu.moapd.scootersharing.mgan.fragments.MapFragment"
        android:label="MapFragment"
        />
    <fragment
        android:id="@+id/fragmentPicture"
        android:name="dk.itu.moapd.scootersharing.mgan.fragments.Picture_fragment"
        android:label="PictureFragment"
        >
        <argument
            android:name="scooters"
            app:argType="string" />
        <action
            android:id="@+id/action_fragmentPicture_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentQR"
        android:name="dk.itu.moapd.scootersharing.mgan.fragments.QRFragment"
        android:label="QRFragment"

        >
        <action
            android:id="@+id/action_fragmentQR_to_mainFragment2"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_fragmentQR_to_fragmentPicture"
            app:destination="@id/fragmentPicture" />
    </fragment>
    <fragment
        android:id="@+id/fragmentScooterInfo"
        android:name="dk.itu.moapd.scootersharing.mgan.fragments.ScooterInfo"
        android:label="ScooterInfoFragment"/>

        <action
            android:id="@+id/action_fragmentQR_to_mainFragment"
            app:destination="@id/mainFragment" />



</navigation>